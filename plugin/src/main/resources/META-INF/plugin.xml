<idea-plugin>
    <id>com.attachme.plugin</id>
    <name>Attachme</name>
    <vendor email="samvel1024@gmail.com">Samvel Abrahamyan</vendor>
    <depends>com.intellij.modules.java</depends>

    <description>A plugin for auto attaching InttelliJ debugger to java processes</description>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="com.attachme.plugin.run.AttachmeRunConfType"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <programRunner
                implementation="com.attachme.plugin.run.AttachmeDebugger$ProcessAttachDebuggerRunner"
                order="last"/>
    </extensions>

</idea-plugin>